---
interface Props {
  title: string;
  icon?: string;
  frontContent: string;
  backContent: string;
}

const { title, icon, frontContent, backContent } = Astro.props;
---

<div class="flip-card">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      {icon && <span class="flip-card-icon">{icon}</span>}
      <h3>{title}</h3>
      <p>{frontContent}</p>
      <span class="flip-hint">→ Hover to learn more</span>
    </div>
    <div class="flip-card-back">
      <h3>{title}</h3>
      <p>{backContent}</p>
    </div>
  </div>
</div>

<style>
  .flip-card {
    background: transparent;
    perspective: 1000px;
    height: 100%;
    min-height: 280px;
  }

  .flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: left;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }

  .flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
  }

  .flip-card-front,
  .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    border-radius: 0.5rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .flip-card-front {
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
  }

  .flip-card-back {
    background: linear-gradient(135deg, var(--sl-color-accent-low) 0%, var(--sl-color-bg-nav) 100%);
    border: 1px solid var(--sl-color-accent);
    transform: rotateY(180deg);
  }

  .flip-card-icon {
    font-size: 2rem;
    line-height: 1;
  }

  h3 {
    margin: 0;
    font-size: var(--sl-text-lg);
    font-weight: 600;
    color: var(--sl-color-white);
  }

  p {
    margin: 0;
    flex: 1;
    color: var(--sl-color-gray-2);
    line-height: 1.6;
  }

  .flip-hint {
    font-size: var(--sl-text-xs);
    color: var(--sl-color-accent);
    opacity: 0.7;
    font-style: italic;
  }

  /* Mobile: tap to flip instead of hover */
  @media (max-width: 768px) {
    .flip-card-inner {
      transition: transform 0.6s;
    }
    
    .flip-card.flipped .flip-card-inner {
      transform: rotateY(180deg);
    }
    
    .flip-card:hover .flip-card-inner {
      transform: none;
    }
    
    .flip-hint::before {
      content: "→ Tap to learn more";
    }
  }
</style>

<script>
  // Add click handler for mobile
  if (window.innerWidth <= 768) {
    document.querySelectorAll('.flip-card').forEach(card => {
      card.addEventListener('click', () => {
        card.classList.toggle('flipped');
      });
    });
  }
</script>
